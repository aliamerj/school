<h1>Edit User</h1>
<%= form_with model: @user, url: user_path(@user), authenticity_token: true do |form| %>
   <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
   <div><%= @user.errors[:name].first %></div>
  </div>

  <div>
    <%= form.label :password %><br>
    <%= form.password_field :password %><br>
    <div><%= @user.errors[:password].first %></div>
  </div>

  <div>
    <%= form.label :password_confirmation %><br>
    <%= form.password_field :password_confirmation %><br>
    <div><%= @user.errors[:password_confirmation].first %></div>
  </div>

   <div>
    <%= form.label :age %><br>
    <%= form.text_field :age %><br>
    <div><%= @user.errors[:age].first %></div>
  </div>
  </hr>
  </br>
  <div>
   <%= form.label :current_password, "Current password" %><br>
    <%= form.password_field :current_password %>
    <div><%= @user.errors[:current_password].first %></div>
 </div>

  <div>
    <%= form.submit :"Update"  %>
  </div>

<% end %>
